<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/home_search_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/normal_input"
        android:drawableEnd="@drawable/search"
        android:fontFamily="@font/proxima_nova"
        android:hint="@string/search_game"
        android:inputType="textPersonName"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home_cover_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@color/input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_search_input" />

    <TextView
        android:id="@+id/game_cover_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/proxima_nova"
        android:text="@string/game_name"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/game_cover_description"
        app:layout_constraintStart_toStartOf="@+id/home_cover_more_about" />

    <TextView
        android:id="@+id/game_cover_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/proxima_nova"
        android:text="@string/game_description"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/home_cover_more_about"
        app:layout_constraintStart_toStartOf="@+id/home_cover_more_about" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/home_cover_more_about"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/primary_button"
        android:fontFamily="@font/proxima_nova"
        android:paddingHorizontal="24dp"
        android:text="@string/more_about"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/home_cover_image"
        app:layout_constraintStart_toStartOf="@+id/home_search_input" />

    <TextView
        android:id="@+id/best_sales_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/proxima_nova"
        android:text="@string/best_sales"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/home_cover_more_about"
        app:layout_constraintTop_toBottomOf="@+id/home_cover_image" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/best_sales_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/best_sales_title" />

</androidx.constraintlayout.widget.ConstraintLayout>